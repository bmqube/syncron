{
  "name": "syncron",
  "version": "0.0.12",
  "description": "Syncron is a command-line tool for synchronizing data between different databases.",
  "main": "dist/index.mjs",
  "bin": {
    "syncron": "./dist/index.mjs"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node .",
    "linkit": "npm run build && npm link",
    "dev": "nodemon --exec \"npm run linkit\" --watch \"src/**/*\" --ext \"mts,mjs\""
  },
  "keywords": [
    "syncron",
    "database",
    "sync",
    "etl",
    "cli"
  ],
  "author": "BM Monjur Morshed",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.9.0",
    "@types/pg": "^8.11.10",
    "nodemon": "^3.1.7"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "mongodb": "^6.10.0",
    "pg": "^8.13.1"
  }
}
